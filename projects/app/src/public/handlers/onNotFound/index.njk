{% extends "public/frontend/layout/base-page.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% set pageTitleName = 'error.error404.title' | translate %}
{% if isUserLoggedIn %}
  {% set buttonText = 'error.error404.content.signInUserButtonText' | translate %}
{% else %}
  {% set buttonText = 'error.error404.content.signOutUserButtonText' | translate %}
{% endif %}

{% block pageContent %}
  <h1 class="govuk-heading-l">{{ 'error.error404.header' | translate }}</h1>
  <p class="govuk-body">{{ 'error.error404.content.paragraph1' | translate }}</p>
  <p class="govuk-body">{{ 'error.error404.content.paragraph2' | translate }}</p>
  {{ govukButton({
    text: buttonText,
    href: 'https://home.account.gov.uk'
  })}}
{% endblock %}