# EditorConfig helps maintain consistent coding styles
# Prettier reads .editorconfig by default and will honor these settings
# Docs: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
# Keep tab width in sync with indent_size for languages that allow tabs
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
# Let Prettier control line length; disable editor hard wrapping
max_line_length = 0

# Markdown: keep trailing spaces (used for line breaks)
[*.md]
trim_trailing_whitespace = false

# Makefiles require real tab characters
[Makefile]
indent_style = tab
# Visual width for tabs in editors (does not affect actual file content)
tab_width = 4
