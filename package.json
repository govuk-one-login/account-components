{
  "name": "account-components",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.16.0 <23"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.899.0",
    "@aws-sdk/client-sqs": "^3.899.0",
    "@aws-sdk/lib-dynamodb": "^3.899.0",
    "@aws-lambda-powertools/logger": "^2.17.0",
    "@aws-lambda-powertools/parameters": "^2.17.0",
    "@aws-sdk/client-ssm": "^3.777.0",
    "@fastify/aws-lambda": "^6.0.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@govuk-one-login/frontend-ui": "^3.0.0",
    "@smithy/node-http-handler": "^4.2.1",
    "aws-xray-sdk": "^3.10.3",
    "fastify": "^5.6.1",
    "govuk-frontend": "^5.12.0",
    "i18next": "^25.5.2",
    "i18next-http-middleware": "^3.8.1",
    "jose": "^6.0.10",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.36.0",
    "@tsconfig/node22": "^22.0.1",
    "@tsconfig/strictest": "^2.0.6",
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^22.18.7",
    "@types/nunjucks": "^3.2.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.13",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "csso-cli": "^4.0.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "eslint-plugin-depend": "^1.3.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-playwright": "^2.2.2",
    "knip": "^5.64.1",
    "prettier": "^3.6.2",
    "rolldown": "^1.0.0-beta.41",
    "sass": "^1.93.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "install-brewfile": "cat Brewfile; echo; echo; read -p \"Install/update Brewfile dependencies as shown above (y/N)?\" -n 1 -r; echo; if [ \"$REPLY\" == \"y\" ]; then brew bundle check || brew bundle install; fi",
    "install-git-hooks": "pre-commit install --install-hooks --overwrite",
    "check-types": "tsc --noEmit",
    "eslint": "eslint . --report-unused-disable-directives --cache",
    "eslint:fix": "eslint . --fix --report-unused-disable-directives --cache",
    "tflint": "tflint --init && tflint --recursive --format compact --chdir solutions/infra",
    "tflint:fix": "tflint --init && tflint --recursive --format compact --chdir solutions/infra --fix",
    "cfnlint": "cfn-lint **/*.cf.yaml",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "knip": "knip",
    "knip:fix": "knip --fix --allow-remove-files",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "detect-secrets": "git ls-files -z | xargs -0 detect-secrets-hook --verbose --baseline .secrets.baseline # pragma: allowlist-secret",
    "check-gh-actions": "zizmor .",
    "check-gh-actions:fix": "zizmor . --fix",
    "sam-validate:core": "cd solutions/core && sam validate --region eu-west-2 --lint",
    "sam-validate:frontend": "cd solutions/frontend && sam validate --region eu-west-2 --lint",
    "sam-validate:stubs": "cd solutions/stubs && sam validate --region eu-west-2 --lint",
    "build:frontend": "cd solutions/frontend && sh ../commons/utils/fastify/build/production.sh",
    "build-local:frontend": "cd solutions/frontend && sh ../commons/utils/fastify/build/local.sh",
    "watch:frontend": "chokidar \"./solutions/frontend/src/**/*\" -c \"npm run build-local:frontend\"",
    "run:frontend": "[ -z \"$RUN_ALL\" ] && sh solutions/localstack/provision.sh; npm run build-local:frontend && concurrently 'npm run watch:frontend' 'cd solutions/frontend && node --enable-source-maps --watch ./dist/local.js' --kill-others",
    "build:stubs": "cd solutions/stubs && sh ../commons/utils/fastify/build/production.sh",
    "build-local:stubs": "cd solutions/stubs && sh ../commons/utils/fastify/build/local.sh",
    "watch:stubs": "chokidar \"./solutions/stubs/src/**/*\" -c \"npm run build-local:stubs\"",
    "run:stubs": "[ -z \"$RUN_ALL\" ] && sh solutions/localstack/provision.sh; npm run build-local:stubs && concurrently 'npm run watch:stubs' 'cd solutions/stubs && node --enable-source-maps --watch ./dist/local.js' --kill-others",
    "run:all": "sh solutions/localstack/provision.sh && RUN_ALL=1 concurrently 'npm run run:frontend' 'npm run run:stubs' --kill-others"
  }
}
